<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<%- messages() %>


<p class="warning-message">Confirm Deletion - This action is permanent and cannot be undone.</p>

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
<% } %>

<div class="form-wrapper">
<form class="vehicle-form" action="/inv/delete/" method="post">


    <label for="inv_make">Make:</label>
    <input type="text" readonly id="inv_make" name="inv_make" value="<%= locals.inv_make %>">

    <label for="inv_model">Model:</label>
    <input type="text" readonly id="inv_model" name="inv_model" value="<%= locals.inv_model %>">

    <label for="inv_year">Year:</label>
    <input type="text" readonly id="inv_year" name="inv_year" value="<%= locals.inv_year %>">

    <label for="inv_price">Price:</label>
    <input type="text" readonly id="inv_price" name="inv_price" value="<%= locals.inv_price %>">

    
    <button type="submit">Delete Vehicle</button>

    
    <input type="hidden" name="inv_id" value="<%= locals.inv_id %>">

</form>
</div>